{
  "branches": [
    "main",
    {
      "name": "develop",
      "prerelease": "dev"
    },
    {
      "name": "feature/*",
      "prerelease": "feature-${name.replace(/^feature\\//g, \"\")}"
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "docs", "release": "patch" },
          { "type": "style", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "test", "release": "patch" },
          { "type": "build", "release": "patch" },
          { "type": "ci", "release": "patch" },
          { "type": "chore", "release": false },
          { "type": "revert", "release": "patch" },
          { "breaking": true, "release": "major" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "‚ú® Features" },
            { "type": "fix", "section": "üêõ Bug Fixes" },
            { "type": "perf", "section": "‚ö° Performance Improvements" },
            { "type": "docs", "section": "üìö Documentation" },
            { "type": "style", "section": "üíÑ Styles" },
            { "type": "refactor", "section": "‚ôªÔ∏è Code Refactoring" },
            { "type": "test", "section": "‚úÖ Tests" },
            { "type": "build", "section": "üë∑ Build System" },
            { "type": "ci", "section": "üîß CI/CD" },
            { "type": "revert", "section": "‚è™ Reverts" }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "---\nsidebar_position: 3\ntitle: \"Changelog\"\ndescription: \"Complete version history and release notes for the TEA Platform\"\n---\n\n# Changelog\n\nAll notable changes to the TEA Platform will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html)."
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": "üéâ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version} :tada:",
        "labels": ["released"],
        "releasedLabels": [
          "released<%= nextRelease.type === 'prerelease' ? '-prerelease' : '' %>"
        ],
        "addReleases": "bottom"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "package-lock.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
